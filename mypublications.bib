@inproceedings{Robinson2010c,
abstract = {The Greenland Ice Sheet (GIS), like many elements in the climate system, is expected to exhibit hysteresis behaviour. This implies that for certain conditions, the GIS may have more than one stable state (for example ice-free and fully glaciated states). Several recent studies have confirmed that multistability exists for the GIS and that increasing temperatures could lead to an irreversible decline in ice sheet volume. However, the global temperature anomaly that would cause this decline is not well known. We use the regional energy-moisture balance model REMBO coupled to the ice sheet model SICOPOLIS to investigate the stability of the GIS on long timescales. An important advantage of this approach is that it explicitly accounts for elevation and albedo feedbacks that are critical for proper representation of the evolution of the climate over the ice sheet. In addition, the model parameters have been constrained by paleo and present-day data. Our results indicate that the GIS is significantly more sensitive to climate change than previously estimated. We also present refined estimates of the temperature threshold leading to a collapse of the ice sheet. Until now, this estimate has been based on the fact that when the surface mass balance of the ice sheet becomes negative, the ice sheet is no longer sustainable. While in this case, the ice sheet will certainly disappear, we also find that this condition is not necessary for the ice sheet to melt nonetheless. Furthermore, a large portion of the uncertainty associated with the estimate of this threshold can be attributed to the sensitivity of the surface mass balance model used - something that has not been accounted for until now. We also investigate the question of irreversibility in the decline of the GIS after the threshold has been crossed. We apply cooler temperatures to a partially melted ice sheet and allow it to run to equilibrium. In agreement with others, we find that intermediate states of the ice sheet are possible (aside from the ice-free and fully glaciated states). However, for warmer equilibrium temperatures, an irreversible collapse of the ice sheet becomes more likely.},
address = {San Francisco, CA, USA},
author = {Robinson, Alexander and Calov, Reinhard and Ganopolski, Andrey},
booktitle = {AGU Fall Meeting},
keywords = {Greenland,conference},
mendeley-tags = {Greenland,conference},
month = dec,
pages = {1--12},
publisher = {AGU},
title = {{Multistability and critical thresholds of the Greenland Ice Sheet}},
type = {Poster},
year = {2010}
