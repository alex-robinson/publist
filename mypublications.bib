author = {Alvarez-Solas, Jorge and Montoya, Marisa and Robinson, Alexander and Banderas-Carre\~{n}o, Rub\'{e}n and Ritz, Catherine and Ganopolski, Andrey},
booktitle = {EGU General Assembly},
keywords = {Ice sheets,conference},
