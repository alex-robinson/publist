url = {http://fundacion.usal.es/conaec/index.php/es/programa-cientifico},
year = {2012}
}
@inproceedings{Robinson2009a,
abstract = {An energy-moisture balance approach has been developed to simulate temperature and precipitation fields over Greenland under a wide range of climate change and topographic scenarios. The model, REMBO, has been coupled to a high resolution, 3D thermomechanical model of the Greenland ice sheet (GIS) via two different surface mass balance schemes: the classical Positive Degree Day scheme and a more physically based approach that directly accounts for shortwave solar radiation. This coupled model was used to simulate equilibrium states of the GIS for various levels of global warming. Here we (1) confirm that a bi-stable state for present-day conditions may exist and (2) show that the stability diagram of the GIS in temperature space depends strongly on the mass balance scheme employed, as well as on the choice of model parameters. Simulations were also performed for a wide range of parameter values over several glacial cycles. Along with historical insolation variations, reconstructed greenhouse gas concentrations and temperature anomalies output from a coupled climate-ice sheet model of intermediate complexity provided external forcing. These simulations were used to evaluate the potential of constraining model parameters using paleo information.},
address = {San Francisco, CA, USA},
author = {Robinson, Alexander and Calov, Reinhard and Ganopolski, Andrey},
booktitle = {AGU Fall Meeting},
keywords = {Greenland,conference},
mendeley-tags = {Greenland,conference},
